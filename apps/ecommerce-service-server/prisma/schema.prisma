datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  carts         Cart[]
  createdAt     DateTime @default(now())
  description   String?
  id            String   @id @default(cuid())
  name          String?
  orders        Order[]
  price         Float?
  stockQuantity Int?
  updatedAt     DateTime @updatedAt
}

model Cart {
  checkouts  Checkout[]
  createdAt  DateTime   @default(now())
  customer   Customer?  @relation(fields: [customerId], references: [id])
  customerId String?
  id         String     @id @default(cuid())
  product    Product?   @relation(fields: [productId], references: [id])
  productId  String?
  quantity   Int?
  updatedAt  DateTime   @updatedAt
}

model Customer {
  address   String?
  carts     Cart[]
  createdAt DateTime @default(now())
  email     String?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  orders    Order[]
  updatedAt DateTime @updatedAt
}

model Order {
  createdAt   DateTime              @default(now())
  customer    Customer?             @relation(fields: [customerId], references: [id])
  customerId  String?
  id          String                @id @default(cuid())
  orderStatus EnumOrderOrderStatus?
  product     Product?              @relation(fields: [productId], references: [id])
  productId   String?
  quantity    Int?
  updatedAt   DateTime              @updatedAt
}

model Checkout {
  cart          Cart?                      @relation(fields: [cartId], references: [id])
  cartId        String?
  createdAt     DateTime                   @default(now())
  id            String                     @id @default(cuid())
  paymentStatus EnumCheckoutPaymentStatus?
  totalAmount   Float?
  updatedAt     DateTime                   @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumOrderOrderStatus {
  Option1
}

enum EnumCheckoutPaymentStatus {
  Option1
}
